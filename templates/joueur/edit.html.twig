{% extends 'base.html.twig' %}

{% block title %}Modifier {{ joueur.name }}{% endblock %}

{% block body %}
    <h1>Modifier "{{ joueur.name }}"</h1>

    {{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.prenom) }}
    {{ form_row(form.nationality) }}
    {{ form_row(form.classement) }}
    {{ form_row(form.main) }}
    {{ form_row(form.imglink) }}

    <button type="submit">Modifier</button>
    {{ form_end(form) }}
{% endblock %}
